@model IEnumerable<EntityLayer.Concrete.Blog1>
@foreach (var item in Model)
{
<div class="sidebar-box">
    <div class="bio text-center">
        <img src="@item.Author.AuthorImage" alt="Image Placeholder" class="img-fluid mb-5">
        <div class="bio-body">
            <h4>@item.Author.AuthorName</h4>
            <p class="mb-4">@item.Author.AuthorAbout</p>
            @*<p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Daha Fazla</a></p>*@  
        </div>
    </div>
</div>
}