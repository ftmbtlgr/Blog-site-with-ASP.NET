@model IEnumerable<EntityLayer.Concrete.Blog1>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        a:hover {
            color: darkblue;
            background-color: none;
            text-decoration: underline;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog Listesi</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Yazar</th>
                            <th>Tarih</th>
                            @*<th>Detay</th>
                                <th>Yorum</th>
                                <th>Güncelle</th>
                                <th>Sil</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BlogID</td>
                                <td><a href="/Blog/BlogDetails/@item.BlogID" style="color: #000000;">@item.BlogTitle</a></td>
                                <td><a href="/Blog/BlogByCategory/@item.CategoryID" style="color: #000000;">@item.Category.CategoryName</a></td>
                                <td>
                                    <a href="/Blog/AuthorBlogList/@item.AuthorID" style="color: #000000;">
                                        @item.Author.AuthorName @item.Author.AuthorSurName
                                    </a>
                                </td>
                                <td>@item.BlogDate.ToShortDateString()</td>
                                <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-warning">Detay</a></td>
                                <td><a href="/Blog/GetCommentByBlog/@item.BlogID" class="btn btn-dark">Yorum</a></td>
                                <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success">Düzenle</a></td>
                                <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger" onclick="return confirm('Blog yazısını silmek istediğinize emin misiniz?')">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Blog/AddNewBlog/" class="btn btn-primary">Blog Ekle</a>
    </section>
</body>
</html>
